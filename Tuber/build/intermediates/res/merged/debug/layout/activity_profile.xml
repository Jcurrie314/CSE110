<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="match_parent">


        <ImageView
            android:id="@+id/tvProfilePicture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_account_circle_black_48dp"
            android:minHeight="200dp"
            android:maxHeight="200dp"
             />



    <!--
    <TextView
        android:id="@+id/tvNotVerified"
        android:text="Request access to their contact info"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    -->

    <TextView
        android:id="@+id/tvName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Polly Polymorphism"
        android:textSize="36dp"
        />

    <RatingBar
        android:id="@+id/rbRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="5.0" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="About Me"
        />
    <TextView
        android:id="@+id/tvAboutMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Tell us about yourself!"
        android:layout_weight="3" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Course List"/>

    <TextView
        android:id="@+id/coursesTaken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="CSE 12 \nCSE 20\nCSE 30"

        android:layout_weight="2" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmail"
        android:text="email@example.com"
        />

    <!-- Change password button-->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bContact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Contact"
        android:layout_weight="1"
        />


