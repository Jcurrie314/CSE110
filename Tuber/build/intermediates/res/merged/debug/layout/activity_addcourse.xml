<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="56dp">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:paddingBottom="24dp"
        android:text="TUBER"
        android:textSize="54dp" />

    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Course" />

    <AutoCompleteTextView
        android:id="@+id/actvDepartment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:completionThreshold="1" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bFindNumbers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:text="Set Department"
        android:textColor="@color/white"

        />

    <AutoCompleteTextView
        android:id="@+id/actvNumbers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
        android:inputType="number"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bAddCourse"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:text="Add Course"
        android:textColor="@color/white"

        />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/sGrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:entries="@array/grade_array"
        android:prompt="@string/grade_prompt"
        android:textColor="#fff" />


</LinearLayout><!-- From: file:/Users/Juleelala/AndroidStudioProjects/CSE110/Tuber/src/main/res/layout/activity_addcourse.xml -->